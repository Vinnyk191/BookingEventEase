@model IEnumerable<BookingEventEase.Models.Bookings>

@{
    ViewData["Title"] = "Bookings";
}

<style>
    .booking-container {
        margin: 40px auto;
        max-width: 1000px;
    }

    .booking-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .booking-header h1 {
            color: #333;
            font-size: 2rem;
        }

        .booking-header a {
            background-color: #28a745;
            color: white;
            padding: 10px 18px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .booking-header a:hover {
                background-color: #218838;
            }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', sans-serif;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

        .styled-table thead tr {
            background-color: #007bff;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .action-links a {
        margin-right: 10px;
        color: #007bff;
        text-decoration: none;
    }

        .action-links a:hover {
            text-decoration: underline;
        }
</style>

<div class="booking-container">
    <div class="booking-header">
        <h1>Booking List</h1>
        <a asp-action="Create">Create New Booking</a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Event.EventName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Venue.VenueName)</th>
                <th>@Html.DisplayNameFor(model => model.First().BookingDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Event?.EventName</td>
                    <td>@item.Venue?.VenueName</td>
                    <td>@item.BookingDate.ToShortDateString()</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookingID">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
