<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingEventEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingEventEase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/venues.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        main {
            padding-top: 20px;
        }

        /* Footer Styles */
        footer.footer {
            background-color: #343a40;
            color: white;
            padding: 15px 0;
            margin-top: 40px;
            text-align: center;
        }

            footer.footer a {
                color: #ccc;
                background-color: transparent;
                padding: 4px 8px;
                border-radius: 4px;
                transition: background-color 0.3s ease, color 0.3s ease;
                text-decoration: none;
            }

                footer.footer a:hover {
                    background-color: #495057;
                    color: #ffffff;
                }

        /* Navbar Styles */
        .navbar-brand {
            font-weight: bold;
            color: #0d6efd !important;
            transition: background-color 0.3s ease, color 0.3s ease;
            padding: 4px 8px;
            border-radius: 4px;
            text-decoration: none;
        }

            .navbar-brand:hover {
                background-color: #e7f1ff;
                color: #0a58ca !important;
            }

        nav.navbar a.nav-link {
            font-weight: 500;
            color: #000;
            padding: 4px 8px;
            border-radius: 4px;
            transition: background-color 0.3s ease, color 0.3s ease;
            text-decoration: none;
        }

            nav.navbar a.nav-link:hover {
                background-color: #e7f1ff;
                color: #0d6efd;
            }

        /* General anchor tag styling */
        a {
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            a:hover {
                background-color: #e7f1ff;
                color: #0d6efd;
            }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookingEventEase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Venues" asp-action="Index">Venue</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Event</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Index">Booking</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EventTypes" asp-action="Index">EventType</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookingEventEase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
