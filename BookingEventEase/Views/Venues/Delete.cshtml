@model BookingEventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff3f3;
        padding: 30px;
        border-radius: 10px;
        border: 1px solid #f5c6cb;
    }

    h2 {
        text-align: center;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .details-item {
        margin-bottom: 15px;
    }

        .details-item label {
            font-weight: bold;
            color: #333;
            display: block;
        }

        .details-item p {
            font-size: 1.1rem;
        }

    .venue-image {
        text-align: center;
        margin-bottom: 20px;
    }

        .venue-image img {
            max-width: 100%;
            max-height: 300px;
            border-radius: 8px;
        }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

        .form-actions input,
        .form-actions a {
            margin: 5px;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            font-weight: bold;
            text-decoration: none;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
</style>

<div class="delete-container">
    <h2>Delete Venue</h2>

    <div class="venue-image">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Venue Image" />
        }
    </div>

    <div class="details-item">
        <label>Name</label>
        <p>@Model.VenueName</p>
    </div>

    <div class="details-item">
        <label>Location</label>
        <p>@Model.Location</p>
    </div>

    <div class="details-item">
        <label>Capacity</label>
        <p>@Model.Capacity</p>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="VenueId" />
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn-danger" />
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
