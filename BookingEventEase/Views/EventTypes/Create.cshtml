@model BookingEventEase.Models.EventType

@{
    ViewData["Title"] = "Create Event Type";
}

<h2 class="mb-4 text-primary">Create Event Type</h2>

<div class="card shadow-sm p-4 bg-light border-0">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="EventTypeName" class="form-label">Event Type Name</label>
            <input asp-for="EventTypeName" class="form-control" placeholder="Enter event type name" />
            <span asp-validation-for="EventTypeName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: aquamarine;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        font-weight: 600;
    }

    .form-label {
        font-weight: 500;
    }

    input.form-control {
        transition: border-color 0.3s ease;
    }

        input.form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .btn-primary:hover,
    .btn-secondary:hover {
        opacity: 0.9;
    }

    a[href]:not(.btn):hover {
        color: #0d6efd;
        text-decoration: underline;
    }

    .card {
        max-width: 500px;
        margin: 0 auto;
    }
</style>

