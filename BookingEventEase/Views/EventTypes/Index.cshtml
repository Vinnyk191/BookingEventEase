@model IEnumerable<BookingEventEase.Models.EventType>

@{
    ViewData["Title"] = "Event Types";
}

<h2 class="text-primary mb-4">Event Types</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">+ Create New</a>
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().EventTypeName)</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EventTypeName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventTypeId" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EventTypeId" class="btn btn-sm btn-info text-white me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EventTypeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        font-weight: 600;
    }

    a.btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        transition: all 0.2s ease-in-out;
    }

    table.table {
        background-color: white;
        border-radius: 6px;
        overflow: hidden;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
